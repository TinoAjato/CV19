<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <SolidColorBrush
        x:Key="WhiteBrush"
        p:Freeze="True"
        Color="White" />
    <SolidColorBrush
        x:Key="RedBrush"
        p:Freeze="True"
        Color="Red" />
    <SolidColorBrush
        x:Key="TransparentBrush"
        p:Freeze="True"
        Color="Transparent" />

</ResourceDictionary>